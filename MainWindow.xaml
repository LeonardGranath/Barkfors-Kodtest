<Window x:Class="Barkfors.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Vehicle Garage" Height="450" Width="800">
    <Grid>
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="23*"/>
                <RowDefinition Height="411*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="AddBtn" Content="Add" Margin="10,0,10,0" Click="AddBtn_Click" />
                <Button Name="DeleteBtn" Content="Delete" Margin="10,0,10,0" Click="DeleteBtn_Click" />
                <Button Name="ModifyBtn" Content="Modify" Margin="10,0,10,0" Click="ModifyBtn_Click" />
            </StackPanel>
            <ListView Name="VehicleList" Grid.Row="1" Margin="0,15,0,0" SelectionChanged="VehicleList_SelectionChanged" />
        </Grid>
    </Grid>
</Window>
